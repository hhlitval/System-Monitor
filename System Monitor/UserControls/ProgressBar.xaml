<UserControl x:Class="System_Monitor.UserControls.ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:System_Monitor.UserControls"
             Name="progressBar">
    
    <Border Margin="0 0 0 0" CornerRadius="15" Height="40">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="#1e2e44"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
        </Border.Style>

        <Grid>
            <ProgressBar Minimum="0" Maximum="100" Value="50" Margin="0 0 0 0" Height="10"                            
                        />
        </Grid>
    </Border>
</UserControl>
