<Window x:Name="window" x:Class="System_Monitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:System_Monitor.Views"
        mc:Ignorable="d"
        Height="500" Width="700" WindowStartupLocation="CenterScreen" 
        Background="Transparent" AllowsTransparency="True"
        WindowStyle="None" ResizeMode="NoResize" Topmost="True">

    <Border x:Name="border" Background="#0f1017" MouseDown="Border_MouseDown" CornerRadius="10">
        <Grid>
            <views:MainView/>
        </Grid>
    </Border>
</Window>
